{{#if errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    No has rellenado todos los campos
    <button
      type="button"
      class="btn-close close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card header">
      <h1 class="new-note">New Note</h1>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="post">
        <div class="mt-3">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Title"
            autofocus
          />
          <div class="mt-3">
            <textarea
              name="description"
              class="form-control"
              placeholder="Description"
            ></textarea>
          </div>
          <div class="mt-3">
            <button
              class="btn btn-primary btn-block form-control"
              type="submit"
            >Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>